@model Questions
@{
    ViewData["Title"] = "EditForm";
}

<h1>Editing...</h1>
<form method="post" action="/qanda/edit">
    <input type="hidden" name="id" value="@Model.id" /><br/>
    Username: <input type="text" name="username" value="@Model.username" /><br />
    Title: <input type="text" name="title" value="@Model.title" /><br />
    Details: <input type="text" name="detail" value="@Model.detail" /><br />
    <input type="hidden" name="posted" value="@Model.posted" />
    Category: <input type="text" name="category" value="@Model.category" /><br />
    Status: <input type="text" name="status" value="@Model.status" /><br />
    <input type="submit" value="Save"/><br />
</form>
<br/>
<a href="/qanda/" class="btn btn-success">Go Back!</a>